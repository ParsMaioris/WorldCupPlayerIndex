{
    "ConnectionStrings": {
        "DefaultConnection": "Data Source=app.db"
    },
    "FileLoggerOptions": {
        "LogDirectory": "bin/logs",
        "FileNamePrefix": "app",
        "RetentionDays": 7,
        "MinimumLogLevel": "Warning"
    },
    "Swagger": {
        "Title": "Player API",
        "Version": "v1",
        "Description": "An API for managing world cup players."
    },
    "JwtSettings": {
        "Issuer": "PlayerApiIssuer",
        "Audience": "PlayerApiAudience",
        "SecretKey": "ThisIsATestSecretKeyForJwt1234567890",
        "ExpirationMinutes": 60
    },
    "CustomLogging": {
        "SumoLogicUrl": "https://default.url",
        "SourceName": "WorldCupIndexApi"
    }
}